{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prepare": "cd .. && husky install backend/.husky",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "dev:backend": "NODE_ENV=development nest start --debug --watch",
    "start:prod": "node dist/main",
    "docker:start": " docker-compose -p TEMPLATE --env-file .env.development up -d",
    "docker:down": "docker-compose -p TEMPLATE --env-file .env.development down",
    "lint:backend": "eslint src/ --ext .ts",
    "format:backend": "prettier --write src/",
    "prisma:studio": "prisma studio",
    "prisma:migration": "npx prisma format && dotenv -e .env.development npx prisma migrate dev && npx prisma generate",
    "prisma:deploy:dev": "dotenv -e .env.development npx prisma migrate deploy",
    "prisma:deploy:prod": "dotenv -e .env.production npx prisma migrate deploy",
    "prisma:reset": "dotenv -e .env.development npx prisma migrate reset",
    "prisma:seed": "dotenv -e .env.development npx prisma db seed",
    "test": "dotenv -e .env.development -- jest --runInBand",
    "test:watch": "dotenv -e .env.development -- jest --watch --runInBand",
    "test:cov": "dotenv -e .env.development -- jest --coverage --runInBand"
  },
  "dependencies": {
    "@badrap/result": "^0.2.13",
    "@fastify/csrf-protection": "^6.2.0",
    "@fastify/helmet": "^10.1.0",
    "@nestjs/common": "^9.4.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.4.0",
    "@nestjs/platform-express": "^9.4.0",
    "@nestjs/platform-fastify": "^9.4.0",
    "@prisma/client": "^4.12.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.0.3",
    "firebase-admin": "^11.6.0",
    "helmet": "^6.1.5",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.0",
    "rxjs": "^7.8.0",
    "save": "^2.9.0",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.3.0",
    "@nestjs/schematics": "^9.1.0",
    "@nestjs/testing": "^9.4.0",
    "@types/express": "^4.17.17",
    "@types/jest": "29.5.0",
    "@types/node": "^18.15.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "deep-equal": "^2.2.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "29.5.0",
    "prettier": "^2.8.7",
    "prisma": "^4.12.0",
    "scaffdog": "^2.5.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.0.4",
    "ulid": "^2.3.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": "\\.test\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "moduleNameMapper": {
      "src(.*)$": "<rootDir>/src/$1"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coverageDirectory": "./.coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testEnvironment": "node",
    "globalSetup": "<rootDir>/jest-setup.ts"
  }
}
