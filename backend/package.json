{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prepare": "cd .. && husky install backend/.husky",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "dev:backend": "NODE_ENV=development nest start --debug --watch",
    "start:prod": "node dist/main",
    "docker:start": " docker-compose -p TEMPLATE --env-file .env.development up -d",
    "docker:down": "docker-compose -p TEMPLATE --env-file .env.development down",
    "lint:backend": "eslint src --ext .ts",
    "format:backend": "prettier --write src/**/*.ts",
    "prisma:studio": "prisma studio",
    "prisma:migration": "npx prisma format && dotenv -e .env.development npx prisma migrate dev && npx prisma generate",
    "prisma:deploy:dev": "dotenv -e .env.development npx prisma migrate deploy",
    "prisma:deploy:prod": "dotenv -e .env.production npx prisma migrate deploy",
    "prisma:reset": "dotenv -e .env.development npx prisma migrate reset",
    "prisma:seed": "dotenv -e .env.development npx prisma db seed",
    "test": "dotenv -e .env.development -- jest --runInBand --config jest-config.js",
    "test:watch": "dotenv -e .env.development -- jest --watch --runInBand --config jest-config.js",
    "test:cov": "dotenv -e .env.development -- jest --coverage --runInBand --config jest-config.js"
  },
  "dependencies": {
    "@badrap/result": "^0.2.13",
    "@fastify/csrf-protection": "^6.1.0",
    "@fastify/helmet": "^10.1.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/platform-fastify": "^9.2.0",
    "@prisma/client": "^4.11.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.0.3",
    "firebase-admin": "^11.3.0",
    "helmet": "^6.0.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "save": "^2.9.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.8",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "deep-equal": "^2.1.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.2",
    "jest": "28.1.3",
    "prettier": "^2.3.2",
    "prisma": "^4.11.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.8",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.7.4",
    "ulid": "^2.3.0"
  }
}
